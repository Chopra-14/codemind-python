# cook your dish here

n = int(input())

for _ in range(n):

    a = int(input())

    b = input().strip()

    boys = girls = entered = 0

    

    for char in b:

        if char == "B":

            boys += 1

        elif char == "G":

            girls += 1

        entered += 1

        

        if boys > girls * 2:

            break

    

    print(entered)
