# cook your dish here
t=int(input())
for i in range(t):
    n=int(input())
    a=list(map(int, input().split()))
    i=0
    odd=0
    even=0
    while i<n:
        if i%2==0:
            even+=a[i]
        else:
            odd+=a[i]
        i+=1
    if odd<=even:
        print(even)
    else:
        print(odd)
